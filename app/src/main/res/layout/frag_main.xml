<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/first"
            app:layout_widthPercent="50%"
            app:layout_aspectRatio="100%"
            android:layout_margin="3dp"
            app:cardBackgroundColor="@color/amberDark"
            app:cardElevation="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/buy_sell"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white_85"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/second"
            android:layout_toEndOf="@id/first"
            app:layout_widthPercent="50%"
            app:layout_aspectRatio="100%"
            android:layout_margin="3dp"
            android:backgroundTint="@color/red"
            app:cardElevation="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/lost_found"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white_85"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/third"
            android:layout_below="@id/first"
            app:layout_widthPercent="50%"
            app:layout_aspectRatio="100%"
            android:layout_margin="3dp"
            android:backgroundTint="@color/BlueGrey500"
            app:cardElevation="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Events"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white_85"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_toEndOf="@id/third"
            android:layout_below="@id/second"
            app:layout_widthPercent="50%"
            app:layout_aspectRatio="100%"
            android:layout_margin="3dp"
            android:backgroundTint="@color/deep_purple"
            app:cardElevation="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Skills"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white_85"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_below="@id/third"
            app:layout_widthPercent="50%"
            app:layout_aspectRatio="100%"
            android:layout_margin="3dp"
            android:backgroundTint="@color/green"
            app:cardElevation="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Timetables / Datesheets etc."
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white_85"
                />
        </android.support.v7.widget.CardView>




    </android.support.percent.PercentRelativeLayout>
</ScrollView>
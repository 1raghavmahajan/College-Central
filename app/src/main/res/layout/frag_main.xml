<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/mainCard1"
            app:layout_widthPercent="49%"
            app:layout_aspectRatio="100%"
            app:layout_marginPercent="0.5%"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/amberDark"
            android:background="@drawable/ripple2"
            app:cardElevation="@dimen/mainCardElevation"
            app:cardCornerRadius="@dimen/mainCardCornerRadius"
            android:clickable="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/buy_sell"
                android:textSize="@dimen/mainCardTextSize"
                android:textStyle="bold"
                android:textColor="@color/white_85"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/mainCard2"
            android:layout_toEndOf="@id/mainCard1"
            app:layout_widthPercent="49%"
            app:layout_aspectRatio="100%"
            app:layout_marginPercent="0.5%"
            app:cardBackgroundColor="@color/red"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:background="@drawable/ripple2"
            app:cardElevation="@dimen/mainCardElevation"
            app:cardCornerRadius="@dimen/mainCardCornerRadius"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/lost_found"
                android:textSize="@dimen/mainCardTextSize"
                android:textStyle="bold"
                android:textColor="@color/white_85"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/mainCard3"
            android:layout_below="@id/mainCard1"
            app:layout_widthPercent="49%"
            app:layout_aspectRatio="100%"
            app:layout_marginPercent="0.5%"
            app:cardBackgroundColor="@color/BlueGrey500"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:background="@drawable/ripple2"
            app:cardElevation="@dimen/mainCardElevation"
            app:cardCornerRadius="@dimen/mainCardCornerRadius"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/events"
                android:textColor="@color/white_85"
                android:textSize="@dimen/mainCardTextSize"
                android:textStyle="bold"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/mainCard4"
            android:layout_toEndOf="@id/mainCard3"
            android:layout_below="@id/mainCard2"
            app:layout_widthPercent="49%"
            app:layout_aspectRatio="100%"
            app:layout_marginPercent="0.5%"
            app:cardBackgroundColor="@color/deep_purple"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:background="@drawable/ripple2"
            app:cardElevation="@dimen/mainCardElevation"
            app:cardCornerRadius="@dimen/mainCardCornerRadius"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/skills"
                android:textSize="@dimen/mainCardTextSize"
                android:textStyle="bold"
                android:textColor="@color/white_85"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/mainCard5"
            android:layout_below="@id/mainCard3"
            app:layout_widthPercent="49%"
            app:layout_aspectRatio="100%"
            app:layout_marginPercent="0.5%"
            app:cardBackgroundColor="@color/green"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:background="@drawable/ripple2"
            app:cardElevation="@dimen/mainCardElevation"
            app:cardCornerRadius="@dimen/mainCardCornerRadius"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/timetables_datesheets_etc"
                android:textSize="@dimen/mainCardTextSize"
                android:textStyle="bold"
                android:textColor="@color/white_85"
                />
        </android.support.v7.widget.CardView>

    </android.support.percent.PercentRelativeLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginTop="4dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@android:color/white"
    android:id="@+id/card_doc"
    android:clickable="true"
    >
  <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/file_icon"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            android:src="@drawable/ic_folder"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <FrameLayout
            android:id="@+id/status"
            android:layout_height="36dp"
            android:layout_width="36dp"
            android:layout_margin="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1">

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/donut_progress"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:donut_finished_color="@color/colorAccent"
                app:donut_progress="40"
                app:donut_finished_stroke_width="4dp"
                app:donut_unfinished_stroke_width="3dp"
                app:donut_show_text="false"
                android:rotation="270"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/done_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_done"
                android:layout_margin="3dp"
                android:tint="@color/colorAccent"
                android:visibility="invisible"
                />

        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintLeft_toRightOf="@+id/file_icon"
            app:layout_constraintRight_toLeftOf="@id/status"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/name"
            android:textSize="15sp"
            android:maxLines="2"
            android:maxLength="60"
            app:layout_constraintHorizontal_bias="0.0"
            />

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
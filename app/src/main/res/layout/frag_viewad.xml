<?xml version="1.0" encoding="utf-8"?>
<com.blackboxindia.PostIT.CustomViews.LockableScrollView
    android:id="@+id/lockableScrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/viewAdContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/Ad_tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="6dp"
                android:maxLines="2"
                android:maxLength="@integer/Max_Title_Length"
                android:text="@string/sampleTitle"
                android:textAlignment="center"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/Ad_imgRecycler"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/viewAdImageSize"
                android:layout_below="@+id/Ad_tvTitle"
                />

            <TextView
                android:id="@+id/Ad_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Ad_imgRecycler"
                android:layout_margin="12dp"
                android:text="@string/labelDescription"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/Ad_tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/Ad_tvDescription"
                android:layout_below="@+id/Ad_imgRecycler"
                android:gravity="end"
                android:text="@string/setPrice"
                android:textSize="26sp" />
            <TextView
                android:id="@+id/Ad_tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Ad_tv1"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="16dp"
                android:text="@string/loremIpsum"
                android:textIsSelectable="true"
                android:textSize="15sp"
                android:maxLength="@integer/Max_Description_Size"
                android:linksClickable="true"
                android:autoLink="all"/>


            <TextView
                android:id="@+id/Ad_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Ad_tvDescription"
                android:text="@string/posted_by"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="12dp"
                />
            <TextView
                android:id="@+id/Ad_tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Ad_tv2"
                android:text="@string/name"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="3dp"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/Ad_tvRoomNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Ad_tvName"
                android:text="@string/room_number"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="3dp"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/Ad_tvHostel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Ad_tvRoomNumber"
                android:text="@string/hostel"
                android:layout_marginStart="16dp"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/Ad_tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Ad_tvHostel"
                android:text="@string/phone_number"
                android:layout_marginStart="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/Ad_tvCollege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Ad_tvPhone"
                android:text="@string/sample_college"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="20dp"
                android:textSize="15sp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Ad_Profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/avatar"
                android:layout_marginEnd="22dp"
                android:layout_alignTop="@id/Ad_tvName"
                android:layout_alignEnd="@+id/Ad_tvDescription"
                android:layout_marginBottom="20dp"/>

        </RelativeLayout>

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/expanded_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

    </FrameLayout>

</com.blackboxindia.PostIT.CustomViews.LockableScrollView>